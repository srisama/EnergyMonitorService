        //}
    });
</script>
<script>
    $('#fromdate').datepicker({
        autoclose: true,
        format: "yyyy-mm-dd"

    });
    $('#todate').datepicker({
        autoclose: true,
        format: "yyyy-mm-dd"
    });
</script>