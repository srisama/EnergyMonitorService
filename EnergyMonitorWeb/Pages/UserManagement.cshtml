@page
@model EnergyMonitorWeb.Pages.UserManagementModel
@{
}

<html lang="en">
<head>
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">*@
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/angular.js"></script>
    <script src="~/js/angular-filter.js"></script>
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />




</head>

<body ng-app="UserManagement" class="mod-bg-1 mod-nav-link mod-nav-link">

    <div ng-controller="UserManagementController" class="row">
        <div class="col-lg-12 col-xl-6">

            <div id="panel-7" class="panel">
                <div class="card-header" style="background-color: #4679cc; color:#fff">
                    <i class="fal fa-th-list"></i>
                    User Registration
                    <a class="btn addnew" id="addcontrols" ng-click="$event.preventDefault();addControls()" style="float: right; border-color: #0040a7; color: #fff " href="">Add New User</a>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">

                        <div class="container">

                            @*<div class="card-body crdbpad">*@

                            <div class="form-group row sucessdiv hide">
                                <label for="GroupName" class="col-md-2"></label>
                                <div class="form-label-group col-md-5">
                                    <div id="sucessdiv" class="alert alert-success "></div>
                                </div>
                            </div>
                            <div class="form-group row errordiv hide">
                                <label for="GroupName" class="col-md-2"></label>
                                <div class="form-label-group col-md-5">
                                    <div id="errordiv" class="alert alert-danger "></div>
                                </div>
                            </div>

                            <form class="myForm" name="Form" enctype="multipart/form-data">
                                <div id="nspagecontrols" class="row hide" style="margin-bottom: 10px;">

                                    <div class="col-lg-6">
                                        <div class="form-group row ">
                                            <label for="DeviceType" class="col-md-4">User Name</label>
                                            <div class="form-label-group col-md-8">
                                                <input type="text" id="username" class="form-control isval idate inutht" value="" ng-model="Users.UserName" name="devicetype" @*ng-change="finalvalidation()"*@ maxlength="50" />
                                                <span id="devicetypenospcl" class="row hide formspan">Error : No Special Characters</span>

                                            </div>
                                        </div>

                                        <div class="form-group row ">
                                            <label for="PowerConsumption" class="col-md-4">Email</label>
                                            <div class="form-label-group col-md-8">
                                                <input type="text" id="email" class="form-control isval idate inutht" value="" ng-model="Users.Email" name="powerconsumption" @*ng-change="finalvalidation()"*@ maxlength="50" />
                                                <span id="powerconsumptionnospcl" class="row hide formspan">Error : No Special Characters</span>

                                            </div>
                                        </div>
                                        <div class="form-group row ">
                                            <label for="PowerConsumption" class="col-md-4">Password</label>
                                            <div class="form-label-group col-md-8">
                                                <input type="text" id="password" class="form-control isval idate inutht" value="" ng-model="Users.Password" name="powerconsumption" @*ng-change="finalvalidation()"*@ maxlength="50" />
                                                <span id="powerconsumptionnospcl" class="row hide formspan">Error : No Special Characters</span>

                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="Role" class="col-md-4">Role</label>
                                            <div class="form-label-group col-md-8">
                                                <select placeholder="Select" class="activeslct" id="ddlrole" @*ng-change="finalvalidation()"*@ ng-model="EnergyConsumption.stores">
                                                    <option value="1">Admin</option>
                                                    <option value="2">User</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label for="GroupOrder" class="col-md-4"></label>
                                            <div class="form-label-group col-md-8">
                                                <input type="button" value="Add" ng-click="insertuser()" class="btnsbmt hide" id="savebtn" @*ng-disabled="savebtndis"*@ />
                                                <input type="button" value="Update" ng-click="updateuser()" class="btnsbmt hide" id="updatebtn" @*ng-disabled="updatebtndis"*@ />
                                                <input type="button" value="Cancel" ng-click="canceluser()" class="btnsbmt hide" style="margin-top: 5px;" id="cancelbtn" @*ng-disabled="cancelbtndis"*@ />
                                            </div>
                                        </div>


                                    </div>

                                </div>
                            </form>
                            @*</div>*@

                        </div>


                        <div class="frame-wrap">
                            <div class="col-lg-12 searchcss row">
                                <div class="form-group row" style="padding-left: 15px;"><input class="srchinput" type="text" ng-model="search" placeholder="Search by User" /></div>
                                <div class="form-group row" style="padding-left: 50px;">
                                    <label for="search" style="font-weight: 200;">Page Size:</label>
                                    <input style="width:90px !important;" type="number" value="1" min="1" max="10000" class="form-control" ng-model="pageSize">
                                </div>
                                @*<div class="col-lg-1 nopad expmrg" style="padding-left:50px;">
                                        <button class="btn btn-primary buttonhw  hide">Export</button>
                                        <div class="dropdown">
                                            <button class="btn btn-primary dropdown-toggle showsummery buttonhw1" id="btnSearch1" type="button" data-toggle="dropdown">
                                                Export
                                            </button>
                                            <ul class="dropdown-menu exportdrop" style="min-width:80px!important">
                                                <li><a href="" id="pdf" ng-click="DownloadPdf()"><i class="fa fa-file-pdf-o" style=""> </i>Pdf </a></li>
                                                <li><a href="" id="excel" ng-click="Downloadexcel()"><i class="fa fa-file-excel-o" style=""> </i>Excel</a></li>
                                            </ul>
                                        </div>
                                    </div>*@
                            </div>
                            <table id="Displaydata" class="table table-sm m-0 table-striped">
                                <thead class="bg-primary-500">
                                    <tr>

                                        <th ng-click="sort('username')">
                                            User Name
                                            <span class="glyphicon sort-icon" ng-show="sortKey=='username'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                        </th>
                                        <th ng-click="sort('password')">
                                            Password
                                            <span class="glyphicon sort-icon" ng-show="sortKey=='password'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                        </th>
                                        <th ng-click="sort('email')">
                                            Email
                                            <span class="glyphicon sort-icon" ng-show="sortKey=='email'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                        </th>
                                        <th ng-click="sort('role_name')">
                                            Role
                                            <span class="glyphicon sort-icon" ng-show="sortKey=='email'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                        </th>

                                        <th>Action</th>
                                        <th>Delete</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @*<tr dir-paginate="s in allusersdata | filter : search|itemsPerPage: pageSize|orderBy:sortKey:reverse" current-page="currentPage">*@
                                    <tr dir-paginate="p in allusersdata | filter : search|itemsPerPage: pageSize |orderBy:sortKey:reverse" current-page="currentPage">

                                        <td>{{p.username}}</td>

                                        <td>{{p.password}}</td>

                                        <td>{{p.email}}</td>

                                        <td>{{p.role_name}}</td>

                                        <td><button class="editbtn" ng-click="edituser(p.user_id,$index)">Edit</button></td>
                                        <td><button class="editbtn" ng-click="deleteuser(p.user_id,$index)">Delete</button></td>

                                    </tr>
                                </tbody>
                            </table>
                            @*<div class="col-md-12"><dir-pagination-controls max-size="5" direction-links="true" boundary-links="true"></dir-pagination-controls></div>*@
                        </div>
                        <div ng-controller="OtherController" class="other-controller">
                                <div class="text-center">
                                    <dir-pagination-controls boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)"></dir-pagination-controls>
                                </div>
                            </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
    <div id="dumxls" class="hide">
        <a id="dumlnkxls"></a>
        <iframe id="dumiframexls"></iframe>
    </div>
    <script src="~/js/UserManagement.js"></script>
    <script src="~/js/dirPagination.js"></script>
</body>

</html>

